{
  "info": {
    "name": "Unicorn Enterprise SaaS Platform",
    "description": "Complete API collection for testing all enterprise features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "tenantHost",
      "value": "acme.myapp.com",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (OAuth2)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"oauth_code_from_google\",\n  \"state\": \"random_state_string\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "OAuth Callback",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/callback?code=oauth_code&state=random_state",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "callback"],
              "query": [
                {
                  "key": "code",
                  "value": "oauth_code"
                },
                {
                  "key": "state",
                  "value": "random_state"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
